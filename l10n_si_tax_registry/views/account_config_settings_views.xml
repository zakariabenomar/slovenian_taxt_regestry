<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_config_settings_view_form_inherit_si_tax_reg" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('app_settings_block')]" position="inside">
            	<h2>Slovenian Tax Registry</h2>
            	<div class="row mt16 o_settings_container" id="slovenian_tax_registry">
            		<div class="col-12 col-lg-6 o_setting_box">

				            <div>
				              <label for="default_l10n_si_tax_reg_premise_line_id"/>
				              <field name="default_l10n_si_tax_reg_premise_line_id" class="oe_inline"/>
				            </div>
				            <div>
				              <label for="default_l10n_si_tax_reg_partner_id"/>
				              <field name="default_l10n_si_tax_reg_partner_id" class="oe_inline"/>
				            </div>
				            <div style="padding-bottom:100px;">
				              <field name="default_l10n_si_tax_reg_force_sent" class="oe_inline"/>
				              <label for="default_l10n_si_tax_reg_force_sent"/>
				            </div>            			

            		</div>
            	</div>
            </xpath>
        </field>
    </record>
</odoo>
